import numpy as np

# Perceptron function
def perceptron(X, y, eta=0.1, T=1000):
    n, d = X.shape
    w = np.zeros(d)
    n, d = X.shape
    w = np.zeros(d)
    w0 = 0.
    t = 0
    while t <= T:
        i = np.random.randint(n)
        y_t = y[i] 
        X_t = X[i,:]
        if (y_t * (np.dot(w,X_t.T) + w0)) <= 0:
            w0 += eta*y_t
            w += eta * y_t * X_t
        t +=1
    return w, w0
