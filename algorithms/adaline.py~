import numpy as np

def adaline(X, y, eta=0.1, T=1000):
    n, d = X.shape
    w = np.random.random(d)
    w0 = 0
    t = 0
    h = 0
    while t <= T:
        i = np.random.randint(n)
        yt = y[i]
        Xt = X[i,:]
        h = np.sign((w0 + np.dot(w,Xt.T)))
#         h = activation(h)
        w0 += eta*(yt - h)
        w += eta * (yt - h) * Xt
        t += 1
    return w, w0
    
